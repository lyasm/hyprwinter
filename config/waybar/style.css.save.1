window#waybar {
    background-color: transparent;
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: CaskaydiaCove Nerd Font Mono, FontAwesome, Roboto, Helvetica, Arial, sans-serif;
    font-size: 13px;
}

window#waybar.hidden {
    opacity: 0.1


.modules-right {
   background: rgba(10,20,40,0.8);
   border-radius: 15px;
   padding: 10px;
}

button {
  border: none;
}

button:hover {
    background: @background;
}

/* single modules */
#clock,
#window {
background-color: rgba(5,10,20,0.4)
}
#window {
    border-radius: 20px;
    background-image: url("/home/paul/.config/waybar/snow1.png");
    background-size: 70px 70px;
    background-position: 0px 0%;
    animation-name: snowfall;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    color: @active;
    opacity: 1;
    padding: 0px 10px;
}

#workspaces {
    padding: 0px;
    font-family: FontAwesome, Arial, sans-serif;
    font-size: 20px;
    border-radius: 20px;
    background: transparent;
    font-weight: bold;
}

#workspaces button {
    padding: 0px 6px;
    padding-right: 12px;
    margin: 4px;
    margin-right: 10px;
    margin-left: 6px;
    border-radius: 20px;
    background-color: rgba(20,30,40,0.8);
}

#workspaces button:hover {
    padding-left: 30px;
    padding-right: 30px;
    background: rgba(20,30,40,0.5);
}

#workspaces button:nth-child(1) {
  color: @color1;
}
#workspaces button:nth-child(2) {
  color: @color2;
}
#workspaces button:nth-child(3) {
  color: @color3;
}
#workspaces button:nth-child(4) {
  color: @color4;
}
#workspaces button:nth-child(5) {
  color: @color5;
}
#workspaces button:nth-child(6) {
  color: @color6;
}
#workspaces button:nth-child(7) {
  color: @color7;
}

#workspaces button.active {
    box-shadow: 0 0 4px 2px #689d69;
    padding-left: 25px;
    padding-right: 30px;
    
    background-image: url("/home/paul/.config/waybar/snow1.png");
    background-size: 70px 70px;
    background-position: 0px 0%;
    animation-name: snowfall;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}

@keyframes snowfall {
  0% {
    background-position: 0px 0px;
  }
  100% {
    background-position: 0px 70px;
  }
}

#workspaces button.urgent {
    background-color: #eb4d4b;;
}



